pipeline {
    agent {
        label 'agent-node'
    }
 
    stages {
        stage('Clone') {
            steps {
                git branch: 'test', url: 'https://github.com/eva-dpr2004/Harmonia_Client.git'
            }
        }
        stage('Build') {
            steps {
                sh '''
                    npm install -g node-pre-gyp
                    npm install -g typescript
                    npm install --include=dev
                    npm install jest --save-dev
                    npm install react-scripts --save-dev
                    npx react-scripts build
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                    ./node_modules/.bin/jest
                '''
            }
        }
        stage('Contrôle qualité') {
            steps {
                sh '''
                    sonar-scanner \
                    -Dsonar.projectKey=Front-end \
                    -Dsonar.sources=. \
                    -Dsonar.host.url=http://localhost:9000 \
                    -Dsonar.token=sqp_1ce01da558a7699debf06896de3aac18598e7abd
                '''
            }
        }
    }
}
